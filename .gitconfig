[user]
    name = horoama
    email = horoama@example.com #example
[color]
    ui = auto
    diff = auto
    branch = auto
[core]
    editor = vim
    pager  = less
[merge]
    tool=vimdiff
[alias]
    gr = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    ls = ls-files
    st = status
    co = checkout
    br= branch
    diffh = diff HEAD
    diffh1 = diff HEAD~
    diffh2 = diff HEAD~2
    diffs = diff --staged
    fuck = fsck
